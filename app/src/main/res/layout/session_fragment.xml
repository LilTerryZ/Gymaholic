<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drawer.SessionFragment">

    <TextView
        android:id="@+id/sessions_lbl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="125dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="19dp"
        android:text="@string/sessions_lbl"
        android:textColor="#AD000000"
        android:textStyle="italic"
        app:layout_constraintBottom_toTopOf="@+id/sessionWaitImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/sessionWaitImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        android:layout_marginBottom="122dp"
        android:contentDescription="@string/hour_glass"
        android:src="@drawable/ic_session_hourglass_empty_24"
        app:layout_constraintBottom_toTopOf="@+id/space"
        app:layout_constraintEnd_toEndOf="@+id/sessions_lbl_id"
        app:layout_constraintStart_toStartOf="@+id/sessions_lbl_id"
        app:layout_constraintTop_toBottomOf="@+id/sessions_lbl_id" />

    <Space
        android:id="@+id/space"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sessionWaitImage" />
</androidx.constraintlayout.widget.ConstraintLayout>
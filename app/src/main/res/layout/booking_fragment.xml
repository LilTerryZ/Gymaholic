<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.drawer.BookingFragment">

    <ImageView
        android:id="@+id/trainerImage"
        android:layout_width="240dp"
        android:layout_height="0dp"

        android:layout_marginTop="66dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_running_24"
        app:layout_constraintBottom_toTopOf="@+id/trainer_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/trainer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="37dp"
        android:text="@string/example_txt_home"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/about_trainer"
        app:layout_constraintEnd_toEndOf="@+id/trainerImage"
        app:layout_constraintStart_toStartOf="@+id/trainerImage"
        app:layout_constraintTop_toBottomOf="@+id/trainerImage" />

    <TextView
        android:id="@+id/about_trainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="@string/example_str_home"
        app:layout_constraintBottom_toTopOf="@+id/date_btn"
        app:layout_constraintStart_toStartOf="@+id/date_btn"
        app:layout_constraintTop_toBottomOf="@+id/trainer_name" />

    <Button
        android:id="@+id/date_btn"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginBottom="158dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/date_lbl"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/pay_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/about_trainer" />

    <Button
        android:id="@+id/time_btn"
        android:layout_width="229dp"
        android:layout_height="82dp"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="78dp"
        android:backgroundTint="#FFFFFF"
        android:text="@string/time_lbl"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toTopOf="@+id/pay_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/date_btn" />

    <Button
        android:id="@+id/pay_btn"
        android:layout_width="231dp"
        android:layout_height="0dp"
        android:layout_marginBottom="191dp"
        android:backgroundTint="@color/green_material"
        android:text="@string/pay_booking"
        android:textColor="#000000"
        app:cornerRadius="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/date_btn" />
</androidx.constraintlayout.widget.ConstraintLayout>